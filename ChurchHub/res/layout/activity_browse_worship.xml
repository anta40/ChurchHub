<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.mrzon.churchhub"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".BrowseWorshipActivity">

    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" android:layout_alignParentTop="true">

        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView android:id="@+id/worships_label" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Worships"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <com.handmark.pulltorefresh.library.PullToRefreshListView
                android:id="@+id/pull_refresh_list" android:layout_width="176dp"
                android:layout_height="316dp" android:layout_marginTop="20dp" android:cacheColorHint="#00000000"
                android:divider="#19000000" android:dividerHeight="4dp" android:fadingEdge="none"
                android:fastScrollEnabled="false" android:footerDividersEnabled="false"
                android:headerDividersEnabled="false" android:smoothScrollbar="true"
                app:layout_column="1" app:layout_columnSpan="2"
                app:layout_gravity="left" app:layout_row="0">

            </com.handmark.pulltorefresh.library.PullToRefreshListView>

            <Button android:id="@+id/add_worship_button" style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/add_worship" />

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
            android:orientation="vertical">

            <GridView android:id="@+id/week_of_year" android:layout_width="match_parent"
                android:layout_height="47dp" android:numColumns="3">

            </GridView>

            <GridView android:id="@+id/date_of_worship" android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="0dp"
                android:clickable="true" android:longClickable="true" android:numColumns="3"
                android:scrollbars="vertical|horizontal" android:smoothScrollbar="true"
                android:verticalSpacing="20dp">

            </GridView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>