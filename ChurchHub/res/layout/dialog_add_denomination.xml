<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText android:id="@+id/name" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" android:layout_marginTop="16dp"
        android:hint="Denomination name" android:inputType="text" />
    <EditText android:id="@+id/abbr" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" android:layout_marginTop="16dp"
        android:hint="Abbreviation" android:inputType="text" />
    <EditText android:id="@+id/website" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp" android:layout_marginRight="4dp"
        android:layout_marginTop="16dp" android:hint="Website" android:inputType="textUri" />
    <EditText android:id="@+id/wiki" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" android:layout_marginTop="16dp"
        android:hint="Wiki Link" android:inputType="textUri" />
</LinearLayout>